extends layout

block header
  link(rel='stylesheet' href='stylesheets/signUp_style.css')
  script(src='javascripts/signUp.js', defer)
  title Sign Up

block content  
  h3 Sign Up 
  form#fSignUp(onsubmit='return false;')
    .name-container
      p First name
      p Last name
    .name-container
      label(for='firstName')
      input#firstName(type='text' name='firstName' placeholder='First Name' required='')
      br
      label(for='lastName')
      input#lastName(type='text' name='lastName' placeholder='Last Name' required='')
      br
    
    div#dvSignupFailMessage

    label(for='username') Username
    br
    input#username(type='text' name='username' placeholder='Username' required='')
    br
    label(for='email') Email Address
    br
    input#email(type='email' name='email' placeholder='Email Address' required='')
    br
    label(for='password') Password
    br
    input#password(type='password' name='password' placeholder='Password' required='')
    br
    label(for='passwordConfirm') Confirm Password
    br
    input#passwordConfirm(type='password' name='passwordConfirm' placeholder='Confirm Password' required='')
    br
    p Other details
    .other-details-container
      input#height(type='height' name='height' placeholder='Height(cm)')
      label(for='height')
      br
      input#weight(type='weight' name='weight' placeholder='Weight(kg)')
      label(for='weight')
      br
      input#age(type='age' name='age' placeholder='Age(Years)')
      label(for='age')
      br
    input#sign-up-button(type='submit' value='Sign Up')

